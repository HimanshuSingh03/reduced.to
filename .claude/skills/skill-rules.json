{
  "version": "1.0",
  "skills": {
    "backend-dev-guidelines": {
      "type": "domain",
      "enforcement": "suggest",
      "priority": "high",
      "promptTriggers": {
        "keywords": [
          "backend",
          "api",
          "nestjs",
          "prisma",
          "database",
          "controller",
          "service",
          "repository",
          "middleware",
          "endpoint"
        ],
        "intentPatterns": [
          ".*create.*controller.*",
          ".*add.*service.*",
          ".*implement.*api.*",
          ".*backend.*route.*",
          ".*prisma.*query.*"
        ]
      },
      "fileTriggers": {
        "pathPatterns": [
          "apps/backend/src/**/*.ts",
          "apps/tracker/src/**/*.ts",
          "libs/**/src/**/*.ts"
        ],
        "pathExclusions": [
          "**/*.spec.ts",
          "**/*.test.ts"
        ]
      }
    },
    "url-shortener-backend-guidelines": {
      "type": "domain",
      "enforcement": "suggest",
      "priority": "high",
      "promptTriggers": {
        "keywords": [
          "slug",
          "short link",
          "redirect",
          "expiration",
          "analytics",
          "click",
          "shortened url",
          "link tracking",
          "url shortener"
        ],
        "intentPatterns": [
          ".*create.*short.*link.*",
          ".*generate.*slug.*",
          ".*track.*clicks.*",
          ".*redirect.*logic.*",
          ".*expire.*links.*"
        ]
      },
      "fileTriggers": {
        "pathPatterns": [
          "apps/backend/src/shortener/**/*.ts",
          "apps/backend/src/analytics/**/*.ts",
          "apps/backend/src/metadata/**/*.ts",
          "apps/backend/src/tasks/**/*.ts",
          "apps/backend/src/storage/**/*.ts",
          "apps/backend/src/cache/**/*.ts",
          "apps/tracker/src/**/*.ts",
          "libs/safe-url/src/**/*.ts",
          "libs/queue-manager/src/**/*.ts",
          "libs/prisma/src/**/*.ts",
          "libs/utils/src/**/*.ts"
        ],
        "pathExclusions": [
          "**/*.spec.ts",
          "**/*.test.ts"
        ]
      }
    },
    "url-shortener-frontend-ux": {
      "type": "domain",
      "enforcement": "suggest",
      "priority": "high",
      "promptTriggers": {
        "keywords": [
          "dashboard",
          "link list",
          "analytics page",
          "qwik",
          "ui",
          "filter",
          "table",
          "frontend",
          "component",
          "user interface"
        ],
        "intentPatterns": [
          ".*create.*dashboard.*",
          ".*display.*links.*",
          ".*show.*analytics.*",
          ".*filter.*table.*",
          ".*qwik.*component.*"
        ]
      },
      "fileTriggers": {
        "pathPatterns": [
          "apps/frontend/src/**/*.tsx",
          "apps/frontend/src/**/*.ts",
          "apps/frontend/adapters/**/*.ts",
          "apps/frontend/public/**/*"
        ],
        "pathExclusions": [
          "**/*.spec.ts",
          "**/*.spec.tsx",
          "**/*.test.ts",
          "**/*.test.tsx"
        ]
      }
    },
    "frontend-dev-guidelines": {
      "type": "domain",
      "enforcement": "suggest",
      "priority": "high",
      "promptTriggers": {
        "keywords": [
          "qwik",
          "component",
          "frontend",
          "tailwind",
          "styling",
          "hover",
          "animation",
          "form",
          "loader",
          "action",
          "route",
          "signal",
          "store",
          "css",
          "page",
          "ui",
          "button",
          "icon",
          "layout"
        ],
        "intentPatterns": [
          ".*style.*",
          ".*hover.*effect.*",
          ".*add.*class.*",
          ".*qwik.*component.*",
          ".*create.*form.*",
          ".*animation.*",
          ".*tailwind.*"
        ]
      },
      "fileTriggers": {
        "pathPatterns": [
          "apps/frontend/src/**/*.tsx",
          "apps/frontend/src/**/*.ts"
        ],
        "pathExclusions": [
          "**/*.spec.ts",
          "**/*.spec.tsx",
          "**/*.test.ts",
          "**/*.test.tsx"
        ]
      }
    },
    "auth-and-tenancy": {
      "type": "domain",
      "enforcement": "suggest",
      "priority": "critical",
      "promptTriggers": {
        "keywords": [
          "auth",
          "login",
          "workspace",
          "tenant",
          "permission",
          "role",
          "authentication",
          "authorization",
          "access control",
          "multi-tenant"
        ],
        "intentPatterns": [
          ".*implement.*auth.*",
          ".*add.*login.*",
          ".*workspace.*access.*",
          ".*check.*permission.*",
          ".*role.*based.*"
        ]
      },
      "fileTriggers": {
        "pathPatterns": [
          "apps/backend/src/auth/**/*.ts",
          "apps/backend/src/core/users/**/*.ts",
          "apps/backend/src/core/reports/**/*.ts",
          "apps/backend/src/shared/**/guards/**/*.ts",
          "apps/backend/src/shared/**/decorators/**/*.ts",
          "apps/frontend/src/shared/auth.service.ts",
          "apps/frontend/src/routes/login/**/*.ts*",
          "apps/frontend/src/routes/register/**/*.ts*",
          "apps/frontend/src/routes/logout/**/*.ts*",
          "apps/frontend/src/routes/dashboard/**/auth/**/*.ts*",
          "apps/frontend/src/routes/dashboard/layout.tsx"
        ],
        "pathExclusions": [
          "**/*.spec.ts",
          "**/*.spec.tsx",
          "**/*.test.ts",
          "**/*.test.tsx"
        ]
      }
    }
  }
}
